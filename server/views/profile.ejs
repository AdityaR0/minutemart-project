<%- include('partials/header', { title: 'Your Profile' }) %>

  <main class="container mt-5">
    <div class="row">
      <div class="col-md-4">
        <div class="list-group shadow-sm">
          <a href="/profile" class="list-group-item list-group-item-action active" aria-current="true">
            <i class="bi bi-person-fill me-2"></i> My Account
          </a>
          <a href="/orders" class="list-group-item list-group-item-action">
            <i class="bi bi-box-seam me-2"></i> Orders
          </a>
          <a href="#" class="list-group-item list-group-item-action disabled">
            <i class="bi bi-geo-alt me-2"></i> Addresses (Coming Soon)
          </a>
          <a href="#" class="list-group-item list-group-item-action disabled">
            <i class="bi bi-headset me-2"></i> Customer Support (Coming Soon)
          </a>
          <a href="/logout" class="list-group-item list-group-item-action text-danger">
            <i class="bi bi-box-arrow-right me-2"></i> Logout
          </a>
        </div>
      </div>

      <div class="col-md-8">
        <div class="card shadow-sm">
          <div class="card-body p-4 text-center">
            <i class="bi bi-person-circle display-1 text-primary mb-3"></i>
            <h2 class="card-title"><%= user.name %></h2>
            <p class="text-muted"><%= user.email %></p>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <script src="/js/cart-count.js"></script>
</body>
</html>