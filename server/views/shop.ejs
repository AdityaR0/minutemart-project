<%- include('partials/header', { title: 'MinuteMart - Groceries in Minutes' }) %>

  <main class="container mt-4">
    <div class="row justify-content-center mb-4">
      <div class="col-md-8">
        <div class="input-group">
          <input type="text" id="search-input" class="form-control" placeholder="Search for products...">
          <button class="btn btn-primary" id="search-btn"><i class="bi bi-search"></i></button>
        </div>
      </div>
    </div>
 
    <div class="promo-container">
        <div class="hero-banner">
            <div class="banner-content">
                <h2>Super Fast Deliveries</h2>
                <p>Get your groceries and essentials delivered in minutes!</p>
                <a href="#" class="cta-button">Shop Now</a>
            </div>
            <img src="https://res.cloudinary.com/dhurg99i3/image/upload/v1759302577/healthy-groceries-bag-66eaef810acf6.jpg_pplbtz-removebg-preview_d0opxa.png" alt="Fast Delivery" class="banner-image">
        </div>
    </div>

    <div class="category-bar mb-4">
      <a href="#" class="category-item active" data-category="All">All</a>
      <% categories.forEach(category => { %>
        <a href="#" class="category-item" data-category="<%= category %>"><%= category %></a>
      <% }) %>
    </div>

    <h2 class="mb-3" id="products-heading">All Products</h2>
    <div id="product-grid" class="row g-4">
      <div class="text-center w-100">
          <div class="spinner-border" role="status">
              <span class="visually-hidden">Loading...</span>
          </div>
      </div>
    </div>
  </main>

  <div class="container my-5 slider-section">
    <!-- <h2 class="text-center mb-4">Deals of the Week</h2> -->
     <h2 class="text-center mb-4 deals-heading">Deals of the Week</h2>
    <div id="dealSlider" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#dealSlider" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#dealSlider" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#dealSlider" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner" style="border-radius: 16px;">
        <div class="carousel-item active">
          <img src="/images/deal-1.png" class="d-block w-100" alt="Special Deal 1">
        </div>
        <div class="carousel-item">
          <img src="/images/deal-2.png" class="d-block w-100" alt="Special Deal 2">
        </div>
        <div class="carousel-item">
          <img src="/images/deal-3.png" class="d-block w-100" alt="Special Deal 3">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#dealSlider" data-bs-slide-to="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#dealSlider" data-bs-slide-to="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>

  <div class="container-fluid text-center py-5" style="background-color: #f8f9fa;">
    <div class="container">
      <h2 class="brand-note-heading">Everything you need, in minutes.</h2>
      <p class="brand-note-subheading">Crafted with care by the MinuteMart Team ðŸ’œ</p>
      <div class="mt-4">
        <img src="/images/fssai-logo.png" alt="FSSAI Licensed" style="height: 40px;">
        <p class="text-muted mt-2">LIC no - 12345678901234</p>
      </div>
    </div>
  </div>

  <script src="/js/shop.js"></script>
  <%- include('partials/footer') %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>